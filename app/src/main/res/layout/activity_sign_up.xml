<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp_Activity"
    android:background="@color/snow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/background_layout_signup"
                    tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_below="@+id/imageView"
                        android:id="@+id/txtv_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="S'inscrire"
                        android:textColor="@color/raisin_black"
                        android:textSize="30sp"
                        android:paddingStart="15dp"
                        android:layout_marginBottom="15dp"
                        tools:ignore="RtlSymmetry"/>
                    <TextView
                        android:id="@+id/txtv_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nom ( Médecine )"
                        android:textColor="@color/raisin_black"
                        android:textSize="15sp"
                        android:paddingStart="15dp"
                        tools:ignore="RtlSymmetry"
                        android:layout_below="@+id/txtv_title_layout" />
                    <EditText
                        android:id="@+id/editText_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:lines="1"
                        android:inputType="textPersonName"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_edit_text_rounded"
                        android:ems="10"
                        android:gravity="center"
                        android:textColor="@color/firebrick"
                        android:textSize="18sp"
                        android:layout_below="@+id/txtv_first_name"/>
                <TextView
                    android:id="@+id/txtv_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prénom ( Médecine )"
                    android:textColor="@color/raisin_black"
                    android:paddingStart="15dp"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_below="@+id/editText_first_name"/>
                <EditText
                    android:id="@+id/editText_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:lines="1"
                    android:inputType="textPersonName"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_edit_text_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:textColor="@color/firebrick"
                    android:textSize="18sp"
                    android:layout_below="@+id/txtv_last_name"/>
                <TextView
                    android:id="@+id/txtv_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Compte"
                    android:textColor="@color/raisin_black"
                    android:paddingStart="15dp"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_below="@+id/editText_last_name"/>
                <EditText
                    android:id="@+id/editText_account"
                    android:layout_width="match_parent"
                    android:inputType="textWebEmailAddress"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_edit_text_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:textColor="@color/firebrick"
                    android:autofillHints=""
                    tools:ignore="LabelFor"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_below="@+id/txtv_account"/>
                <TextView
                    android:id="@+id/txtv_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mot de passe"
                    android:textColor="@color/raisin_black"
                    android:paddingStart="15dp"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_below="@+id/editText_account"/>
                <EditText
                    android:id="@+id/editText_password"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_edit_text_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:textColor="@color/firebrick"
                    android:autofillHints=""
                    tools:ignore="LabelFor"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_below="@+id/txtv_password"/>
                <TextView
                    android:id="@+id/txtv_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirmer votre mot de passe"
                    android:textColor="@color/raisin_black"
                    android:paddingStart="15dp"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_below="@+id/editText_password"/>
                <EditText
                    android:id="@+id/editText_confirm_password"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_edit_text_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:textColor="@color/firebrick"
                    android:autofillHints=""
                    tools:ignore="LabelFor"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_below="@+id/txtv_confirm_password"/>
                <CheckBox android:id="@+id/checkbox_show_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:buttonTint="@color/firebrick"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-10dp"
                    android:text="Afficher le mot de passe"
                    android:textSize="15sp"
                    android:textColor="@color/raisin_black"
                    tools:ignore="TooDeepLayout"
                    android:layout_below="@+id/editText_confirm_password"/>
                <TextView
                    android:id="@+id/txtv_msg_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/firebrick"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:lineSpacingExtra="5dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_below="@+id/checkbox_show_password"/>
                    <Button
                        android:id="@+id/btn_signup"
                        android:text="Créé"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginEnd="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_btn_abt"
                        android:scaleType="fitCenter"
                        android:textColor="@color/snow"
                        android:textSize="18sp"
                        android:layout_below="@+id/txtv_msg_error"/>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>