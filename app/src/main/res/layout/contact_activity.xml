<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ContactActivity"
    android:background="@color/light_grey">
    <LinearLayout
        android:id="@+id/lyt_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:isScrollContainer="true"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal"
            android:verticalScrollbarPosition="right"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_info_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/snow">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="left"
                        tools:ignore="RtlHardcoded">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:background="@color/snow">
                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="68dp"
                                android:src="@drawable/ic_logo"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/img_icon_app_contact"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="15dp"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="15dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginRight="10dp"
                                    tools:ignore="UselessParent">
                                    <TextView
                                        android:gravity="left"
                                        android:layout_gravity="left"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/raisin_black"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:text="Outil d'aide à l'adaptation posologique de médicaments"
                                        android:id="@+id/txt_title_app_contact"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            tools:ignore="RtlHardcoded"
                            android:paddingBottom="10dp"
                            android:background="@color/snow">
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/information"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/img_icon_vers_contact"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    tools:ignore="UselessParent">
                                    <TextView
                                        android:id="@+id/txt_title_vers_app"
                                        android:gravity="left"
                                        android:layout_gravity="left"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/raisin_black"
                                        android:textStyle="bold"
                                        android:textSize="11sp"
                                        android:text="Version"
                                        tools:ignore="SmallSp" />
                                    <TextView
                                        android:id="@+id/txt_vers_app"
                                        android:gravity="left"
                                        android:layout_gravity="left"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/raisin_black"
                                        android:text="version 1.0"
                                        android:textSize="11sp"
                                        tools:ignore="SmallSp" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/snow">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            tools:ignore="RtlHardcoded"
                            android:background="@color/snow">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="15dp"
                                    tools:ignore="UselessParent">
                                    <TextView
                                        android:id="@+id/txt_title_info_app"
                                        android:gravity="left"
                                        android:layout_gravity="left"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/raisin_black"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:text="Remerciement"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/snow"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginBottom="2dp"
                                android:background="@color/snow">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/quote" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            tools:ignore="RtlHardcoded"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:background="@color/snow">
                            <TextView
                                android:id="@+id/txt_info_about"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:gravity="center_horizontal"
                                android:textColor="@color/raisin_black"
                                android:lineSpacingExtra="5dp"
                                android:text="Tout d’abord, mes plus sincères remerciements vont aux parents qui m’ont toujours
encouragés dans la poursuite de notre études, ainsi que pour leur aide, leur compréhension et leur soutien.\n
De plus, nous remercions notre frères pour leurs généreux conseils.\n
Nous tenons aussi à remercier très sincèrement notre encadreur Dr BEGHRICHE Abdesselem grâce à leur savoir, leurs idées, leur disponibilité et leur
soutien, j’ai pu réaliser ce projet.\n
De plus, nous exprimons aussi notre gratitude envers l’université de de Ferhat Abbas et la faculté des sciences
pour leur encadrement académique.\n
Finalement, nous tenons à remercier tous ceux, malheureusement oubliions ici, qui a contribué
a leur façon à ce document."/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/snow">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            tools:ignore="RtlHardcoded"
                            android:background="@color/snow">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="15dp"
                                    tools:ignore="UselessParent">
                                    <TextView
                                        android:id="@+id/txt_title_contact_app"
                                        android:gravity="left"
                                        android:layout_gravity="left"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/raisin_black"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:text="Contactez nous"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_facebook_bilal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                android:padding="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="10dp"
                                app:cardBackgroundColor="@color/raisin_black"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:orientation="vertical"
                                    tools:ignore="UseCompoundDrawables">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/facebook"
                                        android:paddingTop="5dp"
                                        android:layout_gravity="center"/>
                                    <TextView
                                        android:id="@+id/txt_social_media_twitter"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Si Nacer Bilal"
                                        android:textStyle="bold"
                                        android:textSize="11sp"
                                        android:textColor="@color/white"
                                        android:textAlignment="center"
                                        android:gravity="center_horizontal"
                                        tools:ignore="SmallSp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_facebook_abd_elkarim"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                android:padding="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                app:cardBackgroundColor="@color/raisin_black"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:orientation="vertical"
                                    tools:ignore="UseCompoundDrawables">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:paddingTop="5dp"
                                        android:src="@drawable/facebook"
                                        android:layout_gravity="center"/>
                                    <TextView
                                        android:id="@+id/txt_social_media_inst"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Founas Abd Elkarim"
                                        android:textStyle="bold"
                                        android:textSize="11sp"
                                        android:textColor="@color/white"
                                        android:textAlignment="center"
                                        android:gravity="center_horizontal"
                                        tools:ignore="SmallSp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_facebook_mahdi"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                android:padding="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="10dp"
                                app:cardBackgroundColor="@color/raisin_black"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:orientation="vertical"
                                    tools:ignore="UseCompoundDrawables">
                                    <ImageView
                                        android:layout_width="28dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/facebook"
                                        android:paddingTop="5dp"
                                        android:layout_gravity="center"/>
                                    <TextView
                                        android:id="@+id/txt_social_media_yt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Haddad AmaneEllah Mahdi"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textAlignment="center"
                                        android:gravity="center_horizontal"
                                        tools:ignore="SmallSp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_email"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                android:padding="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                app:cardBackgroundColor="@color/raisin_black"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:orientation="vertical"
                                    tools:ignore="UseCompoundDrawables">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:paddingTop="5dp"
                                        android:src="@drawable/email"
                                        android:layout_gravity="center"/>
                                    <TextView
                                        android:id="@+id/txt_social_media_fb"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Beghriche Abdesselem"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textAlignment="center"
                                        android:gravity="center_horizontal"
                                        tools:ignore="SmallSp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>