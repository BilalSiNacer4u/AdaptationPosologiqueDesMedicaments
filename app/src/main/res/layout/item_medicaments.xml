<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:id="@+id/lyt_item_medecines"
    android:background="@drawable/ripple"
    tools:ignore="RtlHardcoded">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="56dp"
        android:layout_height="56dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_meds"
            android:layout_gravity="center_vertical"
            android:id="@+id/img_item_surah"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/lyt_item">
        <LinearLayout
            android:id="@+id/lyt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="UselessParent">
            <TextView
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/raisin_black"
                android:text="Désignation"
                android:id="@+id/txt_designation_medicaments"/>
            <TextView
                android:gravity="left"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:textColor="@color/raisin_black"
                android:layout_height="wrap_content"
                android:text="ID Médicament : ? | Type : ?"
                android:id="@+id/txt_other_information_medicaments"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>